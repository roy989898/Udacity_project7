<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical"
    tools:context="pom.poly.com.tabatatimer.Fragment.TimerFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/timerTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_pause"
            android:textSize="@dimen/pause_timer_size" />

        <TextView
            android:id="@+id/tvPauseTimer"
            style="@style/timerTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer_startnumber"
            android:textSize="@dimen/pause_timer_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">


        <pom.poly.com.tabatatimer.View.myBallView
            android:id="@+id/ball1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/ball_padding"
            app:offColor="@color/colorPrimaryLight"
            app:onColor="@color/colorAccent" />

        <pom.poly.com.tabatatimer.View.myBallView
            android:id="@+id/ball2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/ball_padding"
            app:offColor="@color/colorPrimaryLight"
            app:onColor="@color/colorAccent" />

        <pom.poly.com.tabatatimer.View.myBallView
            android:id="@+id/ball3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/ball_padding"
            app:offColor="@color/colorPrimaryLight"
            app:onColor="@color/colorAccent" />

        <pom.poly.com.tabatatimer.View.myBallView
            android:id="@+id/ball4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/ball_padding"
            app:offColor="@color/colorPrimaryLight"
            app:onColor="@color/colorAccent" />

        <pom.poly.com.tabatatimer.View.myBallView
            android:id="@+id/ball5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/ball_padding"
            app:offColor="@color/colorPrimaryLight"
            app:onColor="@color/colorAccent" />

        <pom.poly.com.tabatatimer.View.myBallView
            android:id="@+id/ball6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/ball_padding"
            app:offColor="@color/colorPrimaryLight"
            app:onColor="@color/colorAccent" />

        <pom.poly.com.tabatatimer.View.myBallView
            android:id="@+id/ball7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/ball_padding"
            app:offColor="@color/colorPrimaryLight"
            app:onColor="@color/colorAccent" />

        <pom.poly.com.tabatatimer.View.myBallView
            android:id="@+id/ball8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/ball_padding"
            app:offColor="@color/colorPrimaryLight"
            app:onColor="@color/colorAccent" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            style="@style/timerTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_action"
            android:textSize="@dimen/action_timer_size" />

        <TextView
            android:id="@+id/tvActionTimer"
            style="@style/timerTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer_startnumber"
            android:textSize="@dimen/action_timer_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/loginbtnbackground"
            android:layout_margin="10dp"
            android:text="@string/bt_start"
            android:textColor="@color/loginPageText" />

        <Button
            android:id="@+id/btReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/loginbtnbackground"
            android:layout_margin="10dp"
            android:text="@string/bt_reset"
            android:textColor="@color/loginPageText" />
    </LinearLayout>
</LinearLayout>
