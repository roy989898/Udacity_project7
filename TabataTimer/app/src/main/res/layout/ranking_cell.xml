<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="May"
                android:id="@+id/tvrankCell_name" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imProfile"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="30dp"

                app:civ_border_width="2dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/defaultprofile_picture" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_thumb_up_white_24px"
                android:layout_weight="1"
                android:id="@+id/btTSupport" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_message_white_24px"
                android:layout_height="wrap_content"
                android:id="@+id/btMessage" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tvTotalTime" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>